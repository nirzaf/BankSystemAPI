@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}
<div class="text-center w-md-75 w-lg-50 mx-auto my-4">
    <h2>@ViewData["Title"]</h2>
    <p>To confirm your identity, please enter the login code from your authenticator app</p>
    <hr/>
    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <input asp-for="RememberMe" type="hidden"/>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.TwoFactorCode"></label>
            <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off"/>
        </div>
        <div class="form-group">
            <label asp-for="Input.RememberMachine">
                <input asp-for="Input.RememberMachine"/>
                <label asp-for="Input.RememberMachine"></label>
            </label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Continue</button>
        </div>
    </form>
</div>