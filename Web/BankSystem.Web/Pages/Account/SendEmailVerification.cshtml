@page
@model SendEmailVerificationModel

@{
    ViewData["Title"] = "Send email verification link";
}

<div class="container">
    <div class="text-center">
        <div class="text-left">
            <a class="btn btn-link" asp-page="/Account/Login">
                <i class="fas fa-chevron-left"></i>
                Back to login page
            </a>
        </div>
        <h2>@ViewData["Title"]</h2>

        <form class="w-md-75 w-lg-50 mx-auto my-4" method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row justify-content-center">
                <recaptcha />
                <span asp-validation-for="Recaptcha.ReCaptchaResponse" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="https://www.google.com/recaptcha/api.js"></script>
}